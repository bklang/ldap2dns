<service_bundle type='manifest' name='ALKAldap2dns:ldap2dns'>

<service
	name='application/management/ldap2dns'
	type='service'
	version='1'>

	<exec_method
	    type='method'
	    name='stop'
	    exec=':kill'
	    timeout_seconds='60' />

	<instance name='default' enabled='false' >
		<exec_method
		    type='method'
		    name='start'
		    exec='/usr/bin/ldap2dnsd'
		    timeout_seconds='60' >
			<method_context>
				<method_environment>
					<envvar name='LDAP2DNS_UPDATE' value='60' />
					<envvar name='LDAP2DNS_OUTPUT' value='data' />
				</method_environment>
			</method_context>
		</exec_method>
	</instance>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
				LDAP to DNS manager
			</loctext>
		</common_name>
		<documentation>
			<manpage title='ldap2dns' section='1'
			    manpath='/usr/man' />
		</documentation>
	</template>

</service>

</service_bundle>
